<div class="container">
  <h2>My Reminders</h2>
  <% @notifications.each do |notification| %>
  <div class="card shadow">
    <div class="card-body">
      <div class="container">
        <div class="row" style="width: 900px;">
          <div class="col-md-6 col-xl-1"><i class="fas fa-bell"></i></div>
            <div class="col-md-6 col-xl-10">
              <h3 class="text-start" style="width: 900px;"><p><%= notification.params[:comment] %></p></h3>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
