<div class='container form'>
  <h1>Editing page for supplements</h1>
  <%= simple_form_for @supplement do |f| %>
    <%= f.input :name %>
    <%= f.input :price %>
    <%= f.input :description %>
    <%= f.input :remaining %>
    <div class='form-div'>
      <%= f.input :quantity %>
      <%= f.input :frequency, as: :select, collection: ['Daily', 'Weekly', 'Monthly'], prompt: 'please select' %>
    </div>
    <%= f.input :category, placeholder: 'Vitamins, Amino acids, Minerals' %>
    <%= f.input :images, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Edit Supplement", class: "btn btn-primary", :style => "margin-bottom: 25px; margin-top: 10px; font-size: 20px;" %>
  <% end %>
</div>
